<p id="notice"><%= notice %></p>

<h1>Roles</h1><br><br>
<%= will_paginate @roles %><br><br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.status %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @roles %>
    </div>
    <%= will_paginate @roles, :container => false %>
  </div>

<br><br>

<%= link_to 'New Role', new_role_path %><br><br>

